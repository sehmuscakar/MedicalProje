@model DataAccessLayer.Entities.Doctor
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h4>Doktor Ekleme Paneli</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.AppUserId" class="form-control" type="hidden" />
            <input asp-for="@Model.RowOrder" class="form-control" type="hidden" />
            <input asp-for="@Model.IsActive" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" type="file"/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branch" class="control-label"></label>
                <input asp-for="Branch" class="form-control" />
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia1" class="control-label"></label>
                <input asp-for="SocialMedia1" class="form-control" />
                <span asp-validation-for="SocialMedia1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia2" class="control-label"></label>
                <input asp-for="SocialMedia2" class="form-control" />
                <span asp-validation-for="SocialMedia2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia3" class="control-label"></label>
                <input asp-for="SocialMedia3" class="form-control" />
                <span asp-validation-for="SocialMedia3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocialMedia4" class="control-label"></label>
                <input asp-for="SocialMedia4" class="form-control" />
                <span asp-validation-for="SocialMedia4" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-secondary" asp-action="Index">Listeye Geri Dön</a>
</div>
