@model List<DataAccessLayer.Entities.Business>
<section id="about" class="about">
    <div class="container-fluid">

        <div class="row">
            @foreach (var item in Model)
            {
                
          
            <div class="col-xl-5 col-lg-6 d-flex justify-content-center align-items-stretch position-relative">
                    <img class="img-fluid" src="~/Img/@item.ImageUrl" alt="" width="500" height="200" />
            </div>
               

            <div class="col-xl-7 col-lg-6 icon-boxes d-flex flex-column align-items-stretch justify-content-center py-5 px-lg-5">
                    <div class="icon-box">
                        <div class="icon"><i class="bx bx-atom"></i></div>
                        <h4 class="title"><a href="">@item.About</a></h4>
                        <p class="description">@item.AboutDecription</p>
                    </div>


                <div class="icon-box">
                    <div class="icon"><i class="bx bx-fingerprint"></i></div>
                    <h4 class="title"><a href="">@item.Mission</a></h4>
                    <p class="description">@item.MissionDescription</p>
                </div>

                <div class="icon-box">
                    <div class="icon"><i class="bx bx-gift"></i></div>
                    <h4 class="title"><a href="">@item.Vision</a></h4>
                    <p class="description">@item.VisionDescription</p>
                </div>

             

            </div>
            }
        </div>

    </div>
</section><!-- End About Section -->