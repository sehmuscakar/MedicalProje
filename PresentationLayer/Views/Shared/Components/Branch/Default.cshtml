@model List<DataAccessLayer.Entities.Branch>

<section id="departments" class="departments">
    <div class="container">

        <div class="section-title">
            <h2>Bölümler</h2>
        </div>
        @foreach (var item in Model)
        {
        <div class="row gy-4">
         
            <div class="col-lg-3">
                <ul class="nav nav-tabs flex-column">
                    <li class="nav-item">
                            <a class="nav-link active show" data-bs-toggle="tab" href="#@item.TabIndex">@item.Header</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-9">
                <div class="tab-content">
                        <div class="tab-pane active show" id="@item.TabIndex">
                        <div class="row gy-4">
                            <div class="col-lg-8 details order-2 order-lg-1">
                                    <h3>@item.Header</h3>
                                <p class="fst-italic">@item.Title</p>
                                <p>@item.Description</p>
                            </div>
                            <div class="col-lg-4 text-center order-1 order-lg-2">
                                <img src="~/Img/@item.ImageUrl" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                
                </div>
            </div>
        
        </div>
        }
    </div>
    </section>
