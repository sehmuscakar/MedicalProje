@model List<DataAccessLayer.Entities.Doctor>
<section id="doctors" class="doctors">
    <div class="container">
        <div class="section-title">
            <h2>Doktorlar</h2>
            <p>Başarılı doktor kadromuzla sizler için hizmetinizdeyiz.</p>
        </div>
        <div class="row">
                @foreach (var item in Model)
                {  
            <div class="col-lg-6">
               
                <div class="member d-flex align-items-start">
                    <div class="pic"><img src="~/Img/@item.ImageUrl" class="img-fluid" alt=""></div>
                    <div class="member-info">
                        <h4>@item.FullName</h4>
                        <span>@item.Branch</span>
                        <p>@item.Description</p>
                        <div class="social">
                            <a href="@item.SocialMedia1"><i class="ri-twitter-fill"></i></a>
                            <a href="@item.SocialMedia2"><i class="ri-facebook-fill"></i></a>
                            <a href="@item.SocialMedia3"><i class="ri-instagram-fill"></i></a>
                            <a href="@item.SocialMedia4"> <i class="ri-linkedin-box-fill"></i> </a>
                        </div>
                    </div>
                </div>
            
            </div>
            }
        </div>
    </div>
</section><!-- End Doctors Section -->